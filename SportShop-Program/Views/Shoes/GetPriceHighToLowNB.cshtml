
@{
    ViewBag.Title = "GetPriceHighToLowNB";
}

<div id="buttonsContainer">
    <h1 onclick="location.href='@Url.Action("Index", "Shoes")'">Shoes</h1>
    <div id="mainButtons">
        <button class="buttonItem" onclick="location.href='@Url.Action("GetAdminView", "Shoes")'">Admin View</button> |
        <button class="buttonItem" onclick="location.href='@Url.Action("GetSales", "Shoes")'">Sales</button>
    </div>
</div>

<hr id="headerLine" />

<div class="miniSideNav">
    <h3>Present</h3><br />
    <button class="buttonItem" onclick="location.href='@Url.Action("Index", "Shoes")'">All</button><br />
    <button class="buttonItem" onclick="location.href='@Url.Action("GetOnlyNike", "Shoes")'">Nike</button><br />
    <button class="buttonItem" onclick="location.href='@Url.Action("GetOnlyAdidas", "Shoes")'">Adidas</button><br />
    <button class="buttonItem" onclick="location.href='@Url.Action("GetOnlyNB", "Shoes")'">New Balance</button><br />
    <h3>Sort</h3><br />
    <button class="buttonItem" onclick="location.href='@Url.Action("GetPriceHighToLowNB", "Shoes")'">High-Low</button><br />
    <button class="buttonItem" onclick="location.href='@Url.Action("GetPriceLowToHighNB", "Shoes")'">Low-High</button><br />
</div>
<div id="cardsContainer">
    @foreach (var shoe in Model)
    {
        <div class="shoeCard">
            <img src="@shoe.ImgLink" alt=" Shoe Img" />
            <h4>@shoe.Brand - @shoe.ShoeModel</h4>
            <hr />
            <p>₪@shoe.Price</p>
        </div>
    }
</div>

